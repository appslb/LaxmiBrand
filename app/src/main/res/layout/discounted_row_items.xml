<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:background="@drawable/image_outline"
        android:layout_margin="10dp"
        android:id="@+id/discountProductCard"
        app:cardElevation="2dp">
        <RelativeLayout
            android:id="@+id/productLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagImg">

                    <TextView
                        android:id="@+id/discountTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20% OFF"
                        android:textSize="7dp"
                        android:typeface="serif"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:background="@drawable/discount_tag_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        />

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/newcat1"
                        android:padding="10dp"
                        android:layout_below="@id/discountTag"
                        android:scaleType="fitXY"
                        android:background="@drawable/blue_outline"
                        android:layout_margin="5dp"/>


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="13dp"
                        android:typeface="serif"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/variantTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250gms"
                        android:textSize="11dp"
                        android:typeface="serif"
                        android:textColor="@color/greyDark"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        />
                    <TextView
                        android:id="@+id/priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 200 "
                        android:textSize="14sp"
                        android:maxLines="3"
                        android:textColor="@color/titlebar_blue"
                        android:layout_toRightOf="@id/productImage"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="0dp"
                        />

                    <Button
                        android:id="@+id/addButton"
                        android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:background="@drawable/button_bg"
                        android:text="ADD"
                        android:layout_margin="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:visibility="visible"/>
                    <LinearLayout
                        android:id="@+id/ll12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/counter_bg"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:layout_marginStart="30dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_add" />

                        <TextView
                            android:id="@+id/productQTY"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/primaryColor"
                            android:hint=""
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="2"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/remove"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="0dp"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/ic_minus_black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

          </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>